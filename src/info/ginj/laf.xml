<synth>
    <!-- Style that all regions will use -->
    <style id="backingStyle">
        <!-- Make all the regions opaque-->
        <opaque value="TRUE"/>
        <font name="Dialog" size="12"/>
        <state>
            <!-- Provide default colors -->
            <color value="#222425" type="BACKGROUND"/>
            <color value="#FBB901" type="FOREGROUND"/>
        </state>
    </style>
    <bind style="backingStyle" type="region" key=".*"/>
    <style id="buttonStyle">
        <!-- Shift the text one pixel when pressed -->
        <property key="Button.textShiftOffset" type="integer" value="1"/>
        <insets top="4" left="12" right="12" bottom="4"/>
        <state>
            <!-- Note: sourceInsets are top, left, bottom, and right -->
            <imagePainter method="buttonBackground" path="img/b_button-bg.png" sourceInsets="4 4 4 4"/>
        </state>
        <state value="PRESSED">
            <imagePainter method="buttonBackground" path="img/b_button-bg-pressed.png" sourceInsets="4 4 4 4"/>
        </state>
    </style>
    <!-- Bind buttonStyle to all JButtons -->
    <bind style="buttonStyle" type="region" key="button"/>
</synth>
