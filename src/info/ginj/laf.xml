<synth>

    <object id="EaSynthGraphicsUtils" class="com.easynth.designer.laf.utils.EaSynthGraphicsUtils"/>
    <object id="EaSynthPainter" class="com.easynth.designer.laf.painter.EaSynthPainter"/>

    <!-- Style that all regions will use -->
    <style id="backingStyle">
        <!-- Make all the regions opaque-->
        <opaque value="TRUE"/>
        <font name="Dialog" size="12"/>
    </style>
    <bind style="backingStyle" type="region" key=".*"/>

    <style id="GinjPanelStyle">
    </style>
    <bind style="GinjPanelStyle" type="name" key="GinjPanel"/>

