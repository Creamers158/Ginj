    <!-- The style for arrow buttons. -->
    <style id="Arrow Button">
        <property key="ArrowButton.size" type="integer" value="14"/>
        <painter idref="EaSynthPainter" method="arrowButtonForeground" direction="north"/>
        <painter idref="EaSynthPainter" method="arrowButtonForeground" direction="west"/>
        <painter idref="EaSynthPainter" method="arrowButtonForeground" direction="south"/>
        <painter idref="EaSynthPainter" method="arrowButtonForeground" direction="east"/>
        <state value="ENABLED">
            <imageIcon id="Arrow_Up_Enabled" path="img/laf/arrow_up_normal.png"/>
            <property key="EaSynth.arrow.up.enabled" type="idref" value="Arrow_Up_Enabled"/>
            <imageIcon id="Arrow_Left_Enabled" path="img/laf/arrow_left_normal.png"/>
            <property key="EaSynth.arrow.left.enabled" type="idref" value="Arrow_Left_Enabled"/>
            <imageIcon id="Arrow_Down_Enabled" path="img/laf/arrow_down_normal.png"/>
            <property key="EaSynth.arrow.down.enabled" type="idref" value="Arrow_Down_Enabled"/>
            <imageIcon id="Arrow_Right_Enabled" path="img/laf/arrow_right_normal.png"/>
            <property key="EaSynth.arrow.right.enabled" type="idref" value="Arrow_Right_Enabled"/>
        </state>
        <state value="MOUSE_OVER">
            <imageIcon id="Arrow_Up_MouseOver" path="img/laf/arrow_up_over.png"/>
            <property key="EaSynth.arrow.up.mouseover" type="idref" value="Arrow_Up_MouseOver"/>
            <imageIcon id="Arrow_Left_MouseOver" path="img/laf/arrow_left_over.png"/>
            <property key="EaSynth.arrow.left.mouseover" type="idref" value="Arrow_Left_MouseOver"/>
            <imageIcon id="Arrow_Down_MouseOver" path="img/laf/arrow_down_over.png"/>
            <property key="EaSynth.arrow.down.mouseover" type="idref" value="Arrow_Down_MouseOver"/>
            <imageIcon id="Arrow_Right_MouseOver" path="img/laf/arrow_right_over.png"/>
            <property key="EaSynth.arrow.right.mouseover" type="idref" value="Arrow_Right_MouseOver"/>
        </state>
        <state value="PRESSED">
            <!-- reusing the same images -->
            <property key="EaSynth.arrow.up.pressed" type="idref" value="Arrow_Up_MouseOver"/>
            <property key="EaSynth.arrow.left.pressed" type="idref" value="Arrow_Left_MouseOver"/>
            <property key="EaSynth.arrow.down.pressed" type="idref" value="Arrow_Down_MouseOver"/>
            <property key="EaSynth.arrow.right.pressed" type="idref" value="Arrow_Right_MouseOver"/>
        </state>
    </style>
    <bind style="Arrow Button" type="region" key="ArrowButton" />

    <!-- The style for scroll bar component. -->
    <style id="Scroll Bar">
        <property key="ScrollBar.minimumThumbSize" type="dimension" value="18 18"/>
        <object id="ScrollBar_Bg_Color" class="java.awt.Color">
            <int>241</int>
            <int>233</int>
            <int>217</int>
            <int>255</int>
        </object>
        <defaultsProperty key="EaSynth.scrollbar.bgcolor" type="idref" value="ScrollBar_Bg_Color"/>
        <object id="ScrollBar_Border_Color" class="java.awt.Color">
            <int>190</int>
            <int>180</int>
            <int>160</int>
            <int>255</int>
        </object>
        <defaultsProperty key="EaSynth.scrollbar.bordercolor" type="idref" value="ScrollBar_Border_Color"/>
        <painter idref="EaSynthPainter" method="scrollBarBackground"/>
        <painter idref="EaSynthPainter" method="scrollBarBorder"/>
        <property key="ScrollBar.thumbHeight" type="integer" value="18"/>
    </style>
    <bind style="Scroll Bar" type="region" key="ScrollBar" />

    <!-- The style for the track of scroll bar. -->
    <style id="Scroll Bar Track">
        <object id="ScrollBar_Track_SideColor" class="java.awt.Color">
            <int>48</int>
            <int>48</int>
            <int>48</int>
            <int>255</int>
        </object>
        <defaultsProperty key="EaSynth.scrollbar.track.sidecolor" type="idref" value="ScrollBar_Track_SideColor"/>
        <object id="ScrollBar_Track_CenterColor" class="java.awt.Color">
            <int>48</int>
            <int>48</int>
            <int>48</int>
            <int>255</int>
        </object>
        <defaultsProperty key="EaSynth.scrollbar.track.centercolor" type="idref" value="ScrollBar_Track_CenterColor"/>
        <object id="ScrollBar_Track_BorderColor" class="java.awt.Color">
            <int>32</int>
            <int>32</int>
            <int>32</int>
            <int>255</int>
        </object>
        <defaultsProperty key="EaSynth.scrollbar.track.bordercolor" type="idref" value="ScrollBar_Track_BorderColor"/>
        <painter idref="EaSynthPainter" method="scrollBarTrackBackground"/>
        <painter idref="EaSynthPainter" method="scrollBarTrackBorder"/>
    </style>
    <bind style="Scroll Bar Track" type="region" key="ScrollBarTrack" />

    <!-- The style for the thumb of the scroll bar. -->
    <style id="Scroll Bar Thumb">
        <object id="ScrollBar_Thumb_SideColor" class="java.awt.Color">
            <int>147</int>
            <int>107</int>
            <int>2</int>
            <int>255</int>
        </object>
        <defaultsProperty key="EaSynth.scrollbar.thumb.sidecolor" type="idref" value="ScrollBar_Thumb_SideColor"/>
        <object id="ScrollBar_Thumb_CenterColor" class="java.awt.Color">
            <int>251</int>
            <int>225</int>
            <int>155</int>
            <int>255</int>
        </object>
        <defaultsProperty key="EaSynth.scrollbar.thumb.centercolor" type="idref" value="ScrollBar_Thumb_CenterColor"/>
        <object id="ScrollBar_Thumb_BorderColor" class="java.awt.Color">
            <int>19</int>
            <int>20</int>
            <int>20</int>
            <int>255</int>
        </object>
        <defaultsProperty key="EaSynth.scrollbar.thumb.borderthick" type="integer" value="1"/>
        <defaultsProperty key="EaSynth.scrollbar.thumb.bordercolor" type="idref" value="ScrollBar_Thumb_BorderColor"/>
        <imageIcon id="ScrollBar_Thumb_Image" path="img/laf/scrollbar_thumb.png"/>
        <property key="EaSynth.scrollbar.thumb.image" type="idref" value="ScrollBar_Thumb_Image"/>
        <painter idref="EaSynthPainter" method="scrollBarThumbBackground"/>
        <painter idref="EaSynthPainter" method="scrollBarThumbBorder"/>
    </style>
    <bind style="Scroll Bar Thumb" type="region" key="ScrollBarThumb" />

</synth>
